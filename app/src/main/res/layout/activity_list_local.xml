<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Toolbar superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_person"
                android:padding="6dp"
                app:tint="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/btnNotification"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_notification"
                    android:padding="6dp"
                    app:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/badge_notification"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp" />
            </FrameLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Card centralizado com scroll -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Barra de pesquisa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Pesquisar Local"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:textColorHint="#999999" />

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_search"
                    android:padding="6dp"
                    android:layout_marginStart="8dp"
                    app:tint="@color/verde_principal"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Lista de locais -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/layoutLocais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Aqui os itens serão repetidos dinamicamente -->

                    <!-- Exemplo de item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#E6F5EA"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:clipToOutline="true"
                        android:backgroundTint="@color/white">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/verde_principal" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="Belas Shopping"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/verde_principal" />

                            <TextView
                                android:text="8.7543231, -9.2101234, 50m"
                                android:textColor="#666"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:text="GPS"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:background="@drawable/tag_gps"
                            android:textSize="11sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <!-- Botão Adicionar -->
            <Button
                android:id="@+id/btnAddLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar"
                android:layout_margin="16dp"
                android:backgroundTint="@color/verde_principal"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
