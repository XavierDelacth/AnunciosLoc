                        android:elevation="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#f8fafc">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

