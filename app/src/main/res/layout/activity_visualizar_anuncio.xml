                        android:layout_margin="4dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#f8fafc">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tipo de PolÃ­tica"
                                android:textColor="#64748b"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/branco"
                                android:text="Whitelist"
                                android:textColor="#065f46"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- PÃºblico-Alvo -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#f8fafc">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PÃºblico-Alvo"
                                android:textColor="#64748b"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="profissao=estudante"
                                android:textColor="#1e293b"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Modo de Entrega -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#f8fafc">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Modo de Entrega"
                                android:textColor="#64748b"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Centralizado"
                                android:textColor="#1e293b"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>