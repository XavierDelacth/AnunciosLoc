                    <TextView
                        android:id="@+id/announcementTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apartamento T2 para Arrendar no Centro"
                        android:textColor="@color/verde_principal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Meta informaÃ§Ãµes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/publisherAvatar"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="#6366f1"
                                android:text="CS"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginEnd="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/publisherName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Carlos Santos"
                                    android:textColor="#1e293b"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/publishTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HÃ¡ 2 horas"
                                    android:textColor="#64748b"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/branco"
                            android:text="ðŸ“ Largo da IndependÃªncia"
                            android:textColor="#6366f1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:padding="8dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Badge da PolÃ­tica -->
                    <TextView
                        android:id="@+id/policyBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/branco"
                        android:text="ðŸ‘¥ Whitelist: Estudantes"
                        android:textColor="#065f46"
                        android:textSize="12sp"
