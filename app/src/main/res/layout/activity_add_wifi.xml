<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Toolbar com ícones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:id="@+id/logo_container"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_background">

                    <ImageView
                        android:id="@+id/iv_megaphone"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@raw/logotipo"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_person"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@color/white" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/btnNotification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_notification"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/badge_notification"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp" />
                </FrameLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <!-- Fundo escurecido -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Card centralizado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNovoLocalWiFi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Botões GPS / WiFi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnGpsToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GPS"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnWifiToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WiFi"
                    android:backgroundTint="@color/verde_principal"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Conteúdo dinâmico -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/layoutConteudoWiFi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Título e botão Fechar -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/tvTituloWiFi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novo Local por WiFi"
                            android:textColor="@color/verde_principal"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_centerHorizontal="true" />

                        <ImageView
                            android:id="@+id/btnFecharWiFi"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/black"
                            android:contentDescription="Fechar" />
                    </RelativeLayout>

                    <!-- Campo Nome do Local -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do Local"
                        android:textColor="@color/verde_principal"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etNomeLocalWiFi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="exemplo"
                        android:background="@drawable/edittext_background"
                        android:padding="10dp"
                        android:textColorHint="#999999" />

                    <!-- Campo SSID -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SSID"
                        android:textColor="@color/verde_principal"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etSSID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ex: MinhaRedeWiFi"
                        android:background="@drawable/edittext_background"
                        android:padding="10dp"
                        android:textColorHint="#999999" />

                    <!-- Botões Cancelar / Adicionar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btnCancelarWiFi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cancelar"
                            android:backgroundTint="@color/vermelho_cancelar"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnAdicionarWiFi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Adicionar"
                            android:backgroundTint="@color/verde_principal"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
