<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#1e293b"
                    android:contentDescription="Voltar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Meu Perfil"
                    android:textColor="#16a34a"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnClosePassword"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    android:contentDescription="Fechar" />

            </RelativeLayout>

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/bg_circle_blue"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="João Silva"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1f2937" />

                    <ImageButton
                        android:id="@+id/btnEditName"
                        android:layout_width="42dp"
                        android:layout_height="43dp"
                        android:layout_toEndOf="@id/tvUsername"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_edit" />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="João Silva"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:background="@drawable/edit_text_border"
                        android:padding="8dp" />

                    <LinearLayout
                        android:id="@+id/layoutEditButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/etUsername"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginStart="8dp">

                        <ImageButton
                            android:id="@+id/btnConfirmEdit"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_blue"
                            android:src="@drawable/ic_check"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/btnCancelEdit"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/bg_circle_blue"
                            android:src="@drawable/ic_close"
                            app:tint="@color/white" />

                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/verde_principal"
                    android:textColor="@android:color/white"
                    android:text="Alterar Senha"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Keys Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chaves de Perfil"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1f2937"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="@color/verde_principal"
                app:tabSelectedTextColor="@color/verde_principal"
                app:tabIndicatorColor="@color/verde_principal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minhas Chaves" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chaves Públicas" />

            </com.google.android.material.tabs.TabLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_view_background"
                    android:queryHint="Pesquisar chaves..."
                    app:iconifiedByDefault="false"
                    app:queryBackground="@android:color/transparent"
                    app:searchHintIcon="@null" />

                <Button
                    android:id="@+id/btnAddKey"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_blue"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewKeys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="8dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>